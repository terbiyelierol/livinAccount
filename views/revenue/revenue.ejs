<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
     <!-- NAV BAR	 -->
  <%- include('../partials/nav.ejs') %>  

<!-- LEFT SIDEBAR	 -->
<%- include('../partials/sidenav.ejs') %>

  <a href="/revenue/add" class="right light-blue darken-4 btn-large" style="font-weight: bold; border-radius: 5px;"><i style="font-weight: bold;" class="material-icons right">add</i>New Revenue</a>


<div class="container">
  <table class="col s12 m6 l4 striped centered light-blue-text text-darken-4 grey lighten-2 z-depth-4">
    <thead>
      <tr>
          <th>Sales Date</th>
          <th>Customer</th>
          <th>Revenue Category</th>
          <th>Total</th>
          <th>Edit</th>
          <th>Delete</th>
      </tr>
      <tbody>
        <% for (let i=0; i< revenueCus.length; i++){ %>
        <tr>
          <td><%= revenueCus[i].revenue_date.toISOString().slice(0, 10) %></td>
          <td><%= revenueCus[i].customer.fullname %></td>
          <td><%= revenueCus[i].category %></td>
          <td><%= (revenueCus[i].amount*revenueCus[i].rate)+revenueCus[i].amount %></td>
          <td><a href="/revenue/<%= revenueCus[i]._id %>/edit"class="grey lighten-2 btn-small"><span class="material-icons light-blue-text text-darken-4">
            edit
            </span></a></td>
            <form action="/revenue/<%= revenueCus[i]._id %>?_method=DELETE" method="POST">
          <td><button class="grey lighten-2 btn-small"><span class="material-icons light-blue-text text-darken-4">
            delete
            </span></button></td>
          </form>
        </tr>
        <% } %>
      </tbody>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th>Total Sales: &#36 <%= sum %></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
  </table>
</div>
  </body>
</html>